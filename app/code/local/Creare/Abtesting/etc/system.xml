<config>
  <tabs>
    <creare translate="label" module="abtesting">
      <label>CreareGroup</label>
      <sort_order>100</sort_order>
    </creare>
  </tabs>
  <sections>
    <abtesting translate="label" module="abtesting">
      <label>AB Testing</label>
      <tab>creare</tab>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <howto translate="label" module="abtesting">
          <label>How to set it up</label>
          <frontend_type>text</frontend_type>
          <sort_order>0</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <comment>
            <![CDATA[
			<p>First of all - make sure you DO NOT HAVE your Optimizely snippet included in the head in some other way, this module will add it automatically.</p>
			<p>To find Variation IDs see: <a target="_blank" href="http://support.optimizely.com/customer/portal/articles/580291-diagnostic-report">Experiment diagnostic report.</a>.</p>
			]]>
          </comment>
		</howto>
		<accounts translate="label" module="abtesting">
          <label>Manage your Optimizely Experiment</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
		  	<fields>
				<active translate="label">
				  <label>Enabled</label>
				  <frontend_type>select</frontend_type>
				  <source_model>adminhtml/system_config_source_yesno</source_model>
				  <sort_order>10</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</active>
				<snippetid translate="label">
				  <label>Snippet ID</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>20</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</snippetid>
				<expid translate="label">
				  <label>Experiment ID</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>30</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</expid>
				<acode translate="label">
				  <label>Variation Code for Theme A</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>40</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</acode>
				<adesign translate="label">
				  <label>Theme A (Original Theme)</label>
				  <frontend_type>select</frontend_type>
				  <source_model>abtesting/source_design</source_model>
				  <sort_order>50</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</adesign>
				<bcode translate="label">
				  <label>Variation Code for Theme B</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>60</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</bcode>
				<bdesign translate="label">
				  <label>Theme B (New Theme)</label>
				  <frontend_type>select</frontend_type>
				  <source_model>abtesting/source_design</source_model>
				  <sort_order>70</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</bdesign>
			</fields>
		</accounts>
      </groups>
    </abtesting>
  </sections>
</config>